<form class="user-form" action="/users/edit/<%= currentUser.id %>?_method=patch" method="post">
    <div class="form-field">
        <label for="username">Username:</label>
        <input class="form-input" type="text" name="username" value="<%= user.username %>" />
    </div>
    <div class="form-field">
        <label for="email">Email:</label>
        <input class="form-input" type="email" name="email" value="<%= user.email %>" />
    </div>
    <div class="form-field">
        <input type="submit" value="Update info" />
    </div>
</form>
<form action="/users/delete/<%= currentUser.id %>?_method=delete" method="post">
    <div>
        <input class="btn btn-warning" type="submit" value="Delete account" />
    </div>
</form>